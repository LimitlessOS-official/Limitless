#
# LimitlessOS v2.0.0 - Default GRUB Configuration
# This file contains default settings for GRUB bootloader
# Inspired by Ubuntu's /etc/default/grub approach
#

# Boot timeout in seconds
GRUB_TIMEOUT=5
GRUB_TIMEOUT_STYLE=menu

# Default boot entry (0 = first entry)
GRUB_DEFAULT=0

# Kernel command line parameters
GRUB_CMDLINE_LINUX_DEFAULT="quiet splash"
GRUB_CMDLINE_LINUX=""

# Graphics settings
GRUB_GFXMODE=auto
GRUB_GFXPAYLOAD_LINUX=keep

# Terminal settings
GRUB_TERMINAL=gfxterm

# Theme and appearance
GRUB_COLOR_NORMAL="white/black"
GRUB_COLOR_HIGHLIGHT="black/light-cyan"

# Background image (optional)
GRUB_BACKGROUND="/boot/grub/background.png"

# Distribution information
GRUB_DISTRIBUTOR="LimitlessOS"
GRUB_VERSION="2.0.0"

# Recovery mode settings
GRUB_DISABLE_RECOVERY=false

# Hidden menu settings
GRUB_HIDDEN_TIMEOUT=0
GRUB_HIDDEN_TIMEOUT_QUIET=false

# Serial console (for server installations)
#GRUB_TERMINAL="console serial"
#GRUB_SERIAL_COMMAND="serial --speed=115200 --unit=0 --word=8 --parity=no --stop=1"

# Additional modules to load
GRUB_PRELOAD_MODULES="part_gpt part_msdos fat ext2 ext4 multiboot2"

# Memory test utility
GRUB_MEMTEST=/boot/memtest86+.bin

# OS detection
GRUB_DISABLE_OS_PROBER=false

# Recordfail settings
GRUB_RECORDFAIL_TIMEOUT=30